4.
	a)0x000000C4
	C = 12 = 1100
	4 = 0100
	C4 = 11000100
	128+64+4 = 196

	
	b)0xFFFFFEC4
	1111 1111 1111 1111 1111 1110 1100 0100
	= -2^31 + 2^30 +2^29 + ... + 2^9 + 2^7 +2^6 + 2^2 = -316

	c)0xFFFFFFFF
	1111 1111 1111 1111 1111 1111 1111 1111 
	-2^31 + 2^30 + ... + 2^0
	= -1
	
5.
	a)0xBF800000
	1011 1111 1000 0000 0000 0000 0000 0000
	s = -1
	e = 0111 1111 = 127
	m = 00000000000000000000000 
	
	= -1

	b) 0x3FC00000
	0 0111 1111 10000000000000000000000
	s = 0
	e = 0111 1111 = 127 - 127 = 0
	1.10000000000000000000000
	1. 2^-1
	= 1.5

	c) 0x42C80000
	0 1000 0101 10010000000000000000000
	s = 0
	e = 1000 0101 = 133 - 127 = 6
	1.10010000000000000000000
	1100100.00000000000000000
	64 + 32 + 4 
	= 100.0 
	
	
6.
	a) 1.0
	0001
	e + 127 = 127 (1111111)
	0 01111111 00000000000000000000000
	0011 = 3
	1111 = f
	1000 = 8
	= 0x3F800000
	
	b)-10.25
	s = 1
	10 = 5 * 2 + 0
	5 = 2 * 2 + 1
	2 = 1 * 2 + 0
	1 = 0 * 2 + 1

	.25 * 2 = 0.5
	.5 * 2 = 1.0
	0 * 2 = 0.0
	
	1010.010
	1.010010 
	e = 3 + 127 = 130
	1 10000010 01001000000000000000000
